{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "msbuild",
            "args": [
                "/property:GenerateFullPaths=true",
                "/t:build",
                "/consoleloggerparameters:NoSummary"
            ],
            "group": "build",
            "presentation": {
                "reveal": "silent"
            },
            "problemMatcher": "$msCompile"
        },

        // New task: run "claude" in an external terminal window
        {
            "label": "Run Claude (external terminal)",
            "type": "shell",
            // Option A: gnome-terminal (common on Ubuntu / GNOME)
            "command": "gnome-terminal",
            "args": [
                "--",
                "bash",
                "-ic",
                "claude; exec bash"
            ],

            // Option B: xterm example (uncomment and use instead of Option A)
            // "command": "xterm",
            // "args": ["-hold", "-e", "claude"],

            // Option C: alacritty example (uncomment and use instead of Option A)
            // "command": "alacritty",
            // "args": ["-e", "bash", "-ic", "claude; exec bash"],

            "presentation": {
                "reveal": "always",
                "panel": "new"
            },
            "problemMatcher": []
        }
    ]
}